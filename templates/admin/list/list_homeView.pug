extends ../layout_admin.pug
block content
    .container 
        //- h1 list_homeView  
    block content
        .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
            h1.h2 Liste des biens
            .btn-toolbar.mb-2.mb-md-0
                a.btn.btn-small.btn-primary(href="/dashboardView/modifySellerView") Ajouter un bien
    hr
    table.table
        thead
            tr
                th.col-lg1 check 
                th(scope="col-lg1") Nom 
                th(scope="col-lg2") Prénom 
                th(scope="col-lg3") Adresse
                th(scope="col-lg3") email
                th(scope="col-lg1") modifié
                th(scope="col-lg1") delete
            tbody
                each eachSellerinMyDbb in allSellersinMyDbb
                    tr
                        //- td.form-check 
                        //- input.form-check-input(type="checkbox" allSellersinMyDbb="default" id="flexCheckDefault")
                        td
                            label.v-checkbox
                            input(type="checkbox")
                        td #{eachSellerinMyDbb.lastnameSeller}
                        td #{eachSellerinMyDbb.firstName}
                        td #{eachSellerinMyDbb.adress}
                        td #{eachSellerinMyDbb.email}
                        td
                            a.btn.btn-float(href="/dashboardView/edit/"+eachSellerinMyDbb._id)
                                em.fa.fa-pencil-alt#pencilIcon &nbsp;
                        td
                            a.btn.btn-float(href="/dashboardView/deleteSeller/"+eachSellerinMyDbb._id)
                                em.fa.fa-trash-alt#deleteIcon &nbsp;
